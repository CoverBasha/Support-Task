@model IEnumerable<Blog>
@{
	Layout = "_DashBoard";
}

<div class="dash-content">
	<div class="overview">
		<div class="title">
			<i class="uil uil-tachometer-fast-alt"></i>
			<span class="text">All Blogs</span>
		</div>
	</div>
	<div>
		<table class="table table-striped">
			<thead>
				<tr>
					<td class="table-light">id</td>
					<td class="table-light">Name</td>
				</tr>
			</thead>
			<tbody>

				@foreach (var item in Model)
				{
					<tr>
						<td>@item.Id</td>
						<td>@item.Name</td>
						<td>


							<a class="btn btn-success" role="button" asp-action="EditBlog" asp-route-id="@item.Id">
								<span class="material-symbols-outlined">
									Edit
								</span>
							</a>
							<a class="btn btn-danger " role="button" asp-action="DeleteBlog" asp-route-id="@item.Id">
								<span class="material-symbols-outlined">
									Delete
								</span>
							</a>
						</td>

					</tr>
				}

			</tbody>
		</table>

	</div>




</div>