@model Product
@{
	Layout = "_DashBoard";
}

<div class="overview">
	<div class="title">
		<i class="uil uil-tachometer-fast-alt"></i>
		<span class="text">Adding Product</span>
	</div>

	<div>
		<form method="post" asp-action="Edit" class="row">
			<div class="mb-3">
				<label asp-for="Name" class="form-label">Product Name</label>
				<input type="text"
					   value="@Model.Name"
					   class="form-control"
					   placeholder=""
					   asp-for="Name" />

			</div>
			<div class="mb-3">
				<label asp-for="Description" class="form-label">Product Description</label>
				<textarea type="text"
						  value="@Model.Description"
						  class="form-control"
						  placeholder=""
						  asp-for="Description"></textarea>
			</div>
			<div class="mb-3 col-lg-6">
				<label asp-for="Quantity" class="form-label">Product Quantity</label>
				<input type="number"
					   value="@Model.Quantity"
					   class="form-control"
					   placeholder=""
					   asp-for="Quantity">
			</div>
			<div class="mb-3 col-lg-6">
				<label asp-for="Price" class="form-label">Product Price</label>
				<input type="number"
					   value="@Model.Price"
					   class="form-control"
					   placeholder=""
					   asp-for="Price">
			</div>
			<div class="mb-3 col-lg-12 d-flex align-items-center mt-4">
				<div class="form-check">
					<input class="form-check-input" type="checkbox" value="@Model.EnableSize" id="" asp-for="EnableSize" />
					<label class="form-check-label" asp-for="EnableSize"> Enable Product Size </label>
				</div>


			</div>

			<div class="mb-3 col-lg-6">
				<label asp-for="Company.Id" class="form-label">company</label>
				<select class="form-select "
						asp-for="Company.Id">

					@{
						if (Model.Company.Id == 1)
						{
							<option>Select one</option>
							<option selected value="1">nike</option>
							<option value="2">adidas</option>
						}
						else if (Model.Company.Id == 2)
						{
							<option>Select one</option>
							<option value="1">nike</option>
							<option selected value="2">adidas</option>
						}
						else
						{
							<option selected>Select one</option>
							<option value="1">nike</option>
							<option value="2">adidas</option>
						}
					}

				</select>
			</div>

			<div class=" mb-3 col-lg-5 d-flex align-items-center mt-lg-4 ">
				<input class="form-control" type="file" id="formFile">
			</div>

			<div class="col-lg-12 d-flex justify-content-center  ">

				<button type="submit" class="btn btn-primary">Submit</button>

			</div>
		</form>

	</div>
</div>

